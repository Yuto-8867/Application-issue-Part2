<div class="comments">
       <% book.book_comments.each do |book_comment| %>
        <%= link_to user_path(book_comment.user) do %>
         <p><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %>
           <%= book_comment.comment %><br><%= book_comment.user.name %>
           <% if book_comment.user == current_user %>
            <div class="comment-delete">
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete,remote: true %>
            </div>
            <% end %>
         </p>

        <% end %>
       <% end %>
</div>